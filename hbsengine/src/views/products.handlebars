<div class="container w-50">
<h2 class="mt-3 mb-3">{{subtitle}}</h2>
{{#if productos.message}}
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#ID</th>
      <th scope="col">Nombre</th>
      <th scope="col">Precio</th>
      <th scope="col">Foto</th>
    </tr>
  </thead>
  <tbody class="table-light">
    {{#each productos.message}}
    <tr class="align-middle">
      <th scope="row">{{this.id}}</th>
      <td>{{this.title}}</td>
      <td>{{this.price}}</td>
      <td><img src={{this.thumbnail}} class="img-thumbnail shadow-sm" width="80" height="80" alt={{this.title}}></td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<div class="bg-warning rounded">
<h5 class="p-3">No hay productos en la lista</h5>
</div>
{{/if}}

<a href="/"><button class="btn btn-success container mt-3">Cargar Productos</button></a>
</div>